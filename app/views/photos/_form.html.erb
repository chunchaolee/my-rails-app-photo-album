<!-- 局部頁面 -->
<!-- 新增 驗證失敗通知 -->
<% if @photo.errors.present? %>
  <ol>
    <% @photo.errors.each do |error, message| %>
    <li><%=  "#{error.capitalize} ERROR:  "+"#{error.capitalize} #{message}" %></li>
    <% end %>
  </ol>
<% end %>

<div class="form container">
<!-- Table內容 -->
<%= form_for @photo, :url => photos_path do |f| %>

  <div class="form-group">
  <%= f.label :title, "Title" %>
  <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :date, "Date" %>
  <%= f.text_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :description, "Description" %>
  <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :file_location, "File location" %>
  <!-- 原為text_field文字欄位，套用uploader後改為file_field檔案欄位。 -->
  <%= f.file_field :file_location %>
  </div>

  <%= f.submit %>
<% end %>
</div>